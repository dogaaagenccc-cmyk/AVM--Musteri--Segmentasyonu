import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from sklearn.cluster import KMeans

# Veriyi okuyalım
df = pd.read_csv('/content/Mall_Customers.csv')
print("Veri Seti Önizleme:")
display(df.head())

# 3. ve 4. sütunları seçiyoruz
X = df.iloc[:, [3, 4]].values
print("Analiz için seçilen verilerin boyutu:", X.shape)

wcss = []
for i in range(1, 11):
    kmeans = KMeans(n_clusters=i, init='k-means++', random_state=42)
    kmeans.fit(X)
    wcss.append(kmeans.inertia_)

# Grafiği çizdirelim
plt.figure(figsize=(10, 5))
plt.plot(range(1, 11), wcss, marker='o', linestyle='--')
plt.title('Dirsek Metodu (Elbow Method)')
plt.xlabel('Küme Sayısı')
plt.ylabel('WCSS Değeri')
plt.show()

# 5 küme ile modeli oluşturuyoruz
kmeans = KMeans(n_clusters=5, init='k-means++', random_state=42)
y_kmeans = kmeans.fit_predict(X)

# Her müşterinin hangi kümeye (0-4 arası) ait olduğunu veri setine ekleyelim
df['Segment'] = y_kmeans
display(df.head())

plt.figure(figsize=(12, 8))
colors = ['red', 'blue', 'green', 'cyan', 'magenta']
labels = ['Standart (Orta Gelir/Harcama)', 'Hedef (Yüksek Gelir/Harcama)', 'Tutumlular (Düşük Gelir/Harcama)',
          'Savurganlar (Düşük Gelir/Yüksek Harcama)', 'Cimriler (Yüksek Gelir/Düşük Harcama)']

for i in range(5):
    plt.scatter(X[y_kmeans == i, 0], X[y_kmeans == i, 1], s=100, c=colors[i], label=labels[i])

# Küme merkezlerini (centroid) işaretleyelim
plt.scatter(kmeans.cluster_centers_[:, 0], kmeans.cluster_centers_[:, 1], s=300, c='yellow', label='Merkezler', edgecolors='black')

plt.title('AVM Müşteri Segmentasyonu')
plt.xlabel('Yıllık Gelir (k$)')
plt.ylabel('Harcama Skoru (1-100)')
plt.legend()
plt.grid(True, alpha=0.3)
plt.show()
